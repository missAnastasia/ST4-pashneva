<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

    <display-name>SimpleWebApp</display-name>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.nure.pashneva.SummaryTask4.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
    <filter-name>JDBCFilter</filter-name>
    <filter-class>ua.nure.pashneva.SummaryTask4.web.filter.JDBCFilter</filter-class>
        <init-param>
            <param-name>DaoFactoryFCN</param-name>
            <param-value>ua.nure.pashneva.SummaryTask4.db.dao.mysql.MysqlDAOFactory</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>JDBCFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CookieFilter</filter-name>
        <filter-class>ua.nure.pashneva.SummaryTask4.web.filter.CookieFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.pashneva.SummaryTask4.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>ua.nure.pashneva.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>getEditUserPageCommand</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>listMenu</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logoutCommand noCommand userInfoCommand</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>getHomePageCommand getLoginPageCommand loginCommand changeLocaleCommand getSettingsPageCommand getRegisterClientPageCommand registerClientCommand</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>homeView.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ru</param-value>
    </context-param>
    <context-param>
        <param-name>locales</param-name>
        <param-value>/WEB-INF/locales.properties</param-value>
    </context-param>

    <listener>
        <listener-class>ua.nure.pashneva.SummaryTask4.web.listener.ContextListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

</web-app>